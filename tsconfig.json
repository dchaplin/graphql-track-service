{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["es2021"],
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "types": ["node"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true
    }
}
