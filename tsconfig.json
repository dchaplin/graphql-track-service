{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["es2021"],
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
